- model_class = Platform
.page-header
  %h1= t '.title', :default => model_class.model_name.human
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:name)
      \:
  %dd= @platform.name
  %dt
    %strong Banners:
  %dd
    = @platform.banners.present? ? '|' : 'nothing'
    - @platform.banners.each do |banner|
      =link_to banner.name, banner_path(banner)
      |
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), platforms_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_platform_path(@platform), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), platform_path(@platform), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
