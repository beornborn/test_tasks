- model_class = BannerForPlatform
.page-header
  %h1= t '.title', :default => model_class.model_name.human
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:banner_id)
      \:
  %dd= @banner_for_platform.banner.name
  %dt
    %strong
      = model_class.human_attribute_name(:platform_id)
      \:
  %dd= @banner_for_platform.platform.name
  %dt
    %strong
      = model_class.human_attribute_name(:max_views)
      \:
  %dd= @banner_for_platform.max_views
  %dt
    %strong
      = model_class.human_attribute_name(:amount_views)
      \:
  %dd= @banner_for_platform.amount_views
  %dt
    %strong
      = model_class.human_attribute_name(:amount_clicks)
      \:
  %dd= @banner_for_platform.amount_clicks
  %dt
    %strong
      = model_class.human_attribute_name(:default)
      \:
  %dd= @banner_for_platform.default
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), |
    banner_for_platforms_path, :class => 'btn'               |
  -#
  = link_to t('.edit', :default => t("helpers.links.edit")),             |
    edit_banner_for_platform_path(@banner_for_platform), :class => 'btn' |
  -#
  = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
    banner_for_platform_path(@banner_for_platform),                                                              |
    :method => 'delete',                                                                                         |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
    :class => 'btn btn-danger'                                                                                   |
