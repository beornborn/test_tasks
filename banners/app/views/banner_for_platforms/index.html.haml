- model_class = BannerForPlatform
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:banner_id)
      %th= model_class.human_attribute_name(:platform_id)
      %th= model_class.human_attribute_name(:max_views)
      %th= model_class.human_attribute_name(:amount_views)
      %th= model_class.human_attribute_name(:amount_clicks)
      %th= model_class.human_attribute_name(:default)
      %th= model_class.human_attribute_name(:created_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @banner_for_platforms.each do |banner_for_platform|
      %tr
        %td= link_to banner_for_platform.id, banner_for_platform_path(banner_for_platform)
        %td
          = link_to banner_path(banner_for_platform.banner) do
            = image_tag banner_for_platform.banner.image rescue nil
        %td= link_to banner_for_platform.platform.name, platform_path(banner_for_platform.platform)
        %td= banner_for_platform.max_views
        %td= banner_for_platform.amount_views
        %td= banner_for_platform.amount_clicks
        %td= banner_for_platform.default
        %td= l banner_for_platform.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_banner_for_platform_path(banner_for_platform), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), banner_for_platform_path(banner_for_platform), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
  = link_to t('.new', :default => t("helpers.links.new")), new_banner_for_platform_path, :class => 'btn btn-primary'                           
