- model_class = Banner
.page-header
  %h1= t '.title', :default => model_class.model_name.human
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:name)
      \:
  %dd= @banner.name
  %dt
    %strong
      Platforms:
  %dd
    = @banner.platforms.present? ? '|' : 'nothing'
    - @banner.platforms.each do |platform|
      =link_to platform.name, platform_path(platform)
      |
  %dt
    %strong
      = model_class.human_attribute_name(:image)
      \:
  %dd= image_tag @banner.image rescue nil
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), banners_path, :class => 'btn'                            
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_banner_path(@banner), :class => 'btn' 
  = link_to t('.destroy', :default => t("helpers.links.destroy")), banner_path(@banner), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'                                                                                   
